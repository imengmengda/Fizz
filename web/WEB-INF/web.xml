        <param-value>
            /WEB-INF/applicationContext.xml,
            /WEB-INF/spring-hibernate.xml,
            /WEB-INF/service-entity.xml,
            com.follower.fizz.controller.ChatMessageWebsocketController
        </param-value>
    </context-param>

